<%
  style = File.read("#{BASEDIR}/style.css")
%>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Gabarito de Questões</title>
    <style>
      <%= style%>
    </style>
  </head>
  <body>
    <header>
      <h4 class="text-center">
        <b>Instituto Tecnológico Educacional Soul Academy -
          <span>
            <%= @subjectName%>
          </span><br>
          Gabarito
        </b>
      </h4>
    </header>
    <%for questionPosition in 0..@questions.length-1
        question = @questions[questionPosition]
        questionNumber = questionPosition+1
        response = question['resposta']
        %>
          <b>
            Questão <%=questionNumber%>:<br>
            <%=response%><br>
          </b><br>
    <%end%>
  </body>
</html>
